[Unit]
Description=Run dualstack webserver for pxe boot
StartLimitIntervalSec=30s
StartLimitBurst=5
After=network.target

[Service]
StandardInput=null
StandardOutput=journal
StandardError=journal
Restart=on-failure
RestartSec=2s
WorkingDirectory=/srv/http
ExecStart=/usr/bin/darkhttpd /srv/http --ipv6 --addr '::' --port 80 --mimetypes /etc/conf.d/mimetypes

[Install]
WantedBy=default.target
